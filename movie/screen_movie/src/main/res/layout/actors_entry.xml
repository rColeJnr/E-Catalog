<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/two_dp"
    android:backgroundTint="?attr/colorSurface"
    android:elevation="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/actor_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_height"
            android:adjustViewBounds="true"
            android:contentDescription="@string/actor_image"
            android:maxWidth="@dimen/max_image_width"
            android:minWidth="@dimen/min_image_width"
            android:scaleType="fitCenter"
            android:src="@drawable/filled_icon" />

        <TextView
            android:id="@+id/actor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/actor_name"
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/actor_character"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/as_character"
            android:textAppearance="?attr/textAppearanceBody2" />

    </LinearLayout>
</androidx.cardview.widget.CardView>