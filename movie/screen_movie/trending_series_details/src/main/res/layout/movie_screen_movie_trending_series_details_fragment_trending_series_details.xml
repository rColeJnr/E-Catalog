<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/movie_screen_movie_trending_series_details_two_dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/details_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="?attr/colorSurface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/movie_screen_movie_trending_series_details_six_dp"
                        android:hint="@string/movie_screen_movie_trending_series_details_series_name"
                        android:textAppearance="?attr/textAppearanceHeadline5" />

                    <ProgressBar
                        android:id="@+id/details_progress_bar"
                        style="?android:progressBarStyleHorizontal"
                        android:layout_width="282dp"
                        android:layout_height="wrap_content"
                        android:indeterminate="true" />

                    <TextView
                        android:id="@+id/details_error_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/movie_screen_movie_trending_series_details_failed_to_retrieve_data"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="@android:color/holo_blue_light"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/movie_screen_movie_trending_series_details_two_dp"
                android:background="?attr/colorOnSurface"
                android:minHeight="250dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/movie_screen_movie_trending_series_details_two_dp"
                android:hint="@string/movie_screen_movie_trending_series_details_overview"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="18sp" />

            <View style="@style/MovieScreenMovieTrendingSeriesDetailsDivider.Horizontal" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/adult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/movie_screen_movie_trending_series_details_two_dp"
                android:text="@string/movie_screen_movie_trending_series_details_adult_content"
                android:textAppearance="?attr/textAppearanceBody2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/movie_screen_movie_trending_series_details_two_dp"
                android:text="@string/movie_screen_movie_trending_series_details_genres"
                android:textAppearance="?attr/textAppearanceBody2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/creator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/movie_screen_movie_trending_series_details_two_dp"
                android:hint="@string/movie_screen_movie_trending_series_details_creators"
                android:textAppearance="?attr/textAppearanceBody1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/in_production"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/movie_screen_movie_trending_series_details_two_dp"
                android:text="@string/movie_screen_movie_trending_series_details_in_production"
                android:textAppearance="?attr/textAppearanceBody2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/first_air_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/movie_screen_movie_trending_series_details_two_dp"
                android:text="@string/movie_screen_movie_trending_series_details_first_air_date"
                android:textAppearance="?attr/textAppearanceBody2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/last_air_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/movie_screen_movie_trending_series_details_two_dp"
                android:text="@string/movie_screen_movie_trending_series_details_last_air_date"
                android:textAppearance="?attr/textAppearanceBody2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/number_of_seasons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/movie_screen_movie_trending_series_details_two_dp"
                android:text="@string/movie_screen_movie_trending_series_details_number_of_seasons"
                android:textAppearance="?attr/textAppearanceBody2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/popularity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/movie_screen_movie_trending_series_details_two_dp"
                android:text="@string/movie_screen_movie_trending_series_details_popularity"
                android:textAppearance="?attr/textAppearanceBody2" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/movie_screen_movie_trending_series_details_two_dp"
                android:text="@string/movie_screen_movie_trending_series_details_ratings"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <View style="@style/MovieScreenMovieTrendingSeriesDetailsDivider.Horizontal" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/movie_screen_movie_trending_series_details_six_dp"
                android:clickable="false"
                android:foregroundGravity="center_horizontal"
                android:layoutDirection="locale"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/imdb_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/movie_screen_movie_trending_series_details_imdb_rating"
                    android:textAppearance="?attr/textAppearanceBody2"
                    app:chipBackgroundColor="?attr/colorOnSurfaceVariant"
                    app:chipStrokeColor="@android:color/black"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/movie_db_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/movie_screen_movie_trending_series_details_db_rating"
                    android:textAppearance="?attr/textAppearanceBody2"
                    app:chipBackgroundColor="?attr/colorOnSurfaceVariant"
                    app:chipStrokeColor="@android:color/black"
                    app:chipStrokeWidth="1dp" />

            </com.google.android.material.chip.ChipGroup>

            <View style="@style/MovieScreenMovieTrendingSeriesDetailsDivider.Horizontal" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/movie_screen_movie_trending_series_details_two_dp"
                android:text="@string/movie_screen_movie_trending_series_details_similar_titles"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <View style="@style/MovieScreenMovieTrendingSeriesDetailsDivider.Horizontal" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_similars"
                android:layout_width="match_parent"
                android:layout_height="@dimen/movie_screen_movie_trending_series_details_image_height"
                tools:listitem="@layout/movie_screen_movie_trending_series_details_similar_entry" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.core.widget.NestedScrollView>
